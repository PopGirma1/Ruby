@model IEnumerable<WebApplication11.Models.employeeviewmodel>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table table-striped table-responsive">

    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Hire Date</th>
            <th>Date of Birth</th>
            <th>Department</th>
            <th></th>
        </tr>

    </thead>

    <tbody>

        @if (Model!=null)
        {
            foreach (var item in Model)
            {
                
            
            <tr>
                <td> <img  src="@Url.Content(item.emp_img)" style="width:50px; height:50px;"/></td>
                <td>@item.emp_name</td>
                <td>@item.emp_hiredate</td>
                <td>@item.emp_dob</td>
                <td>@item.dep_name</td>
                <td>   
                     <a class='btn btn-success btn-sm' href="@Url.Action("Edit", new {id=@item.emp_id })">Edit</a>
                    <a class='btn btn-danger btn-sm' href="@Url.Action("Delete", new {id=@item.emp_id })">Delete</a>
                    <a class='btn btn-info btn-sm' href="@Url.Action("Details", new {id=@item.emp_id })">View</a>



                 </td>

            </tr>
        }
        }
        else
        {
                <tr><td colspan="5">No Result Found......</td></tr>
        }



    </tbody>


</table>